<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePatientActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/cantarell"
            android:text="Create a Patient"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewPatientGender" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextPatientGender" android:fontFamily="@font/cantarell" android:text="Gender" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextPatientGender" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Gender" android:inputType="textPersonName" android:padding="10dp" android:textAlignment="textStart"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewAge" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextAge" android:fontFamily="@font/cantarell" android:text="Age" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextPatientGender"/>

        <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextAge" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewAge" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Age" android:inputType="number" android:padding="10dp" android:textAlignment="textStart"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewFullName" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextFullName" android:fontFamily="@font/cantarell" android:text="Full Name" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextAge"/>

        <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextFullName" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewFullName" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Full Name" android:inputType="textEmailAddress" android:padding="10dp" android:textAlignment="textStart"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewContactNumber" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextContactNumber" android:fontFamily="@font/cantarell" android:text="Contact Number" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextFullName"/>

        <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextContactNumber" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewContactNumber" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Contact Number" android:inputType="phone" android:padding="10dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewReferenceContact" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextReferenceContact" android:fontFamily="@font/cantarell" android:text="Reference Contact" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextContactNumber"/>

        <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextReferenceContact" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewReferenceContact" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Reference Contact" android:inputType="phone" android:padding="10dp" android:textAlignment="textStart"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewProfession" android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/editTextProfession" android:fontFamily="@font/cantarell" android:text="Profession" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextReferenceContact"/>

        <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextProfession" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewProfession" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Profession" android:inputType="text" android:padding="10dp" android:textAlignment="textStart"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewEmail" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextPatientGender" android:fontFamily="@font/cantarell" android:text="Email" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextEmail" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Email" android:inputType="textPersonName" android:padding="10dp" android:textAlignment="textStart"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewAddress" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextPatientGender" android:fontFamily="@font/cantarell" android:text="Address" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextAddress" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Address" android:inputType="textPersonName" android:padding="10dp" android:textAlignment="textStart"/>

        <Button
            android:id="@+id/btn_create_patient_signup"
            android:layout_width="373dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn"
            android:fontFamily="@font/cantarell"
            android:padding="10dp"
            android:text="Create Patient"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextProfession" />


    </LinearLayout>


</ScrollView>



