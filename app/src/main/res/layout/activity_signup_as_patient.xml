<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/cantarell"
        android:text="Create an account"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button android:layout_width="274dp" android:layout_height="67dp" android:id="@+id/btn_signup_patient_signup" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" android:text="Sign Up" android:textSize="24sp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/editTextProfession" android:background="@drawable/rounded_btn" android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextPatientGender" android:fontFamily="@font/cantarell" android:text="Full Name/As in IC" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextPatientGender" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Name" android:inputType="textPersonName" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewAge" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextAge" android:fontFamily="@font/cantarell" android:text="IC No." android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextPatientGender"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextAge" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewAge" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="IC No." android:inputType="number" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewFullName" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextFullName" android:fontFamily="@font/cantarell" android:text="Email Address" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextAge"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextFullName" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewFullName" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Email" android:inputType="textEmailAddress" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewContactNumber" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextContactNumber" android:fontFamily="@font/cantarell" android:text="Phone No." android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextFullName"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextContactNumber" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewContactNumber" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Phone No." android:inputType="phone" android:padding="10dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewReferenceContact" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextReferenceContact" android:fontFamily="@font/cantarell" android:text="Password" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextContactNumber"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextReferenceContact" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewReferenceContact" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Password" android:inputType="textPassword" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewProfession" android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/editTextProfession" android:fontFamily="@font/cantarell" android:text="Confirm Password" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextReferenceContact"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextProfession" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewProfession" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Confirm Password" android:inputType="textPassword" android:padding="10dp" android:textAlignment="textStart"/>

</androidx.constraintlayout.widget.ConstraintLayout>